{
  "$schema": "./bindings.schema.json",
  "bindings": [
    {
      "name": "NewLine",
      "zed-editor": {
        "action": "editor::Newline",
        "context": "Editor && mode == full"
      },
      "vscode": {
        "action": "editor.action.insertLineAfter",
        "context": "editorTextFocus && !editorReadonly"
      },
      "micro": {
        "action": "InsertNewline",
        "context": "buffer"
      }
    },
    {
      "name": "NewLineAbove",
      "zed-editor": {
        "action": "editor::NewlineAbove",
        "context": "Editor && mode == full"
      },
      "vscode": {
        "action": "editor.action.insertLineBefore",
        "context": "editorTextFocus && !editorReadonly"
      },
      "micro": null
    },
    {
      "name": "NewLineBelow",
      "zed-editor": {
        "action": "editor::NewlineBelow",
        "context": "Editor && mode == full"
      },
      "vscode": {
        "action": "editor.action.insertLineAfter",
        "context": "editorTextFocus && !editorReadonly"
      },
      "micro": null
    },
    {
      "name": "SelectLine",
      "zed-editor": {
        "action": "editor::SelectLine",
        "context": "Editor"
      },
      "vscode": {
        "action": "editor.action.selectLines",
        "context": "editorTextFocus"
      },
      "micro": {
        "action": "SelectLine",
        "context": "buffer"
      }
    },
    {
      "name": "MoveLineUp",
      "zed-editor": {
        "action": "editor::MoveLineUp",
        "context": "Editor"
      },
      "vscode": {
        "action": "editor.action.moveLinesUpAction",
        "context": "editorTextFocus"
      },
      "micro": {
        "action": "MoveLinesUp",
        "context": "buffer"
      }
    },
    {
      "name": "MoveLineDown",
      "zed-editor": {
        "action": "editor::MoveLineDown",
        "context": "Editor"
      },
      "vscode": {
        "action": "editor.action.moveLinesDownAction",
        "context": "editorTextFocus"
      },
      "micro": {
        "action": "MoveLinesDown",
        "context": "buffer"
      }
    },
    {
      "name": "Undo",
      "zed-editor": {
        "action": "editor::Undo",
        "context": "Editor"
      },
      "vscode": {
        "action": "undo",
        "context": "editorTextFocus"
      },
      "micro": {
        "action": "Undo",
        "context": "buffer"
      }
    },
    {
      "name": "Redo",
      "zed-editor": {
        "action": "editor::Redo",
        "context": "Editor"
      },
      "vscode": {
        "action": "redo",
        "context": "editorTextFocus"
      },
      "micro": {
        "action": "Redo",
        "context": "buffer"
      }
    },
    {
      "name": "GotoLine",
      "zed-editor": {
        "action": "go_to_line::Toggle",
        "context": "Editor"
      },
      "vscode": {
        "action": "workbench.action.gotoLine",
        "context": "editorTextFocus"
      },
      "micro": {
        "action": "JumpLine",
        "context": "buffer"
      }
    }
  ]
}
